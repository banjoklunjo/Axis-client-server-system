<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: #2A2E37;"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.ConnectView">
    <children>
        <Label fx:id="statusLabel" alignment="CENTER" layoutX="1.0" layoutY="12.0" prefHeight="17.0" prefWidth="400.0"
               textAlignment="CENTER" textFill="WHITE"/>
        <HBox alignment="CENTER" layoutX="2.0" layoutY="46.0" prefHeight="50.0" prefWidth="400.0" spacing="50.0">
            <children>
                <TextField fx:id="ipField" prefWidth="150.0" promptText="IP"/>
                <TextField fx:id="portField" prefWidth="150.0" promptText="PORT"/>
            </children>
        </HBox>
        <Button fx:id="btnConnect" layoutX="27.0" layoutY="97.0" mnemonicParsing="false" onAction="#onConnectClick"
                prefHeight="30.0" prefWidth="350.0" text="Connect">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <ListView fx:id="listView" layoutX="27.0" layoutY="155.0" prefHeight="200.0" prefWidth="350.0"/>
        <TextField fx:id="frequencyField" layoutX="27.0" layoutY="362.0" prefHeight="37.0" prefWidth="96.0"
                   promptText="Frequency" styleClass="text-field"/>
        <Button fx:id="btnSend" layoutX="133.0" layoutY="362.0" mnemonicParsing="false" onAction="#onSend"
                prefHeight="39.0" prefWidth="245.0" text="Send"/>
        <Label fx:id="sentLabel" alignment="CENTER" layoutX="2.0" layoutY="414.0" prefHeight="17.0" prefWidth="400.0"
               textFill="WHITE"/>
    </children>
</AnchorPane>
